{
	"compilerOptions": {
		"target": "ES5",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"noImplicitAny": false,
		"declaration": true,
		"rootDir": "./src",
		"outDir": "./dist",
		"typeRoots": [
            "node_modules/@types",
            "typings"
        ],
        "types": [
        	"core-js",
        	"node",
        	"jasmine"
        ]
	},
	"exclude": [
		"bower",
		"node_modules"
	],
	"files": [
		"./src/main.ts"
	],
	"angularCompilerOptions": {
        "strictMetadataEmit": true,
        "skipTemplateCodegen": true
    }
}
